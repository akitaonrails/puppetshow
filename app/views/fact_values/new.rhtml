<h1>New fact_value</h1>

<%= error_messages_for :fact_value %>

<% form_for(:fact_value, :url => fact_values_path) do |f| %>
  <p>
    <b>Value</b><br />
    <%= f.text_field :value %>
  </p>

  <p>
    <b>Fact name</b><br />
    <%= f.text_field :fact_name_id %>
  </p>

  <p>
    <b>Updated at</b><br />
    <%= f.datetime_select :updated_at %>
  </p>

  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>

<%= link_to 'Back', fact_values_path %>